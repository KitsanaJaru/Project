<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A0033"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ® NUMGUESS ðŸŽ®"
            android:textSize="24sp"
            android:textColor="#00FF99"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/textViewInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="â€”"
            android:textSize="36sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="#2E005F"
            android:padding="36dp"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/textViewRound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Round 123"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@id/textViewInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result : "
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/textViewInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <GridLayout
            android:id="@+id/gridNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="4"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/textViewResult"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/button1"
                android:text="1" />
            <Button
                android:id="@+id/button2"
                android:text="2"/>
            <Button
                android:id="@+id/button3"
                android:text="3"/>
            <Button
                android:id="@+id/button4"
                android:text="4"/>
            <Button
                android:id="@+id/button5"
                android:text="5"/>
            <Button
                android:id="@+id/button6"
                android:text="6"/>
            <Button
                android:id="@+id/button7"
                android:text="7"/>
            <Button
                android:id="@+id/button8"
                android:text="8"/>
            <Button
                android:id="@+id/button9"
                android:text="9"/>
            <Button
                android:id="@+id/buttonSubmit"
                android:text="OK"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:textSize="16dp"
                android:backgroundTint="@color/lime"
                android:layout_marginEnd="8dp"/>
            <Button
                android:id="@+id/button0"
                android:text="0"/>
            <Button
                android:id="@+id/buttonDelete"
                android:text="âŒ«"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:textSize="16dp"
                android:backgroundTint="@color/orange"
                android:layout_marginStart="8dp"/>
        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
